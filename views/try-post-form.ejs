<%- include('parts/header') %>

<%- include('navbar') %>

<div class="container">

    <form method="post">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="text" class="form-control" id="email" name="email" aria-describedby="emailHelp">

            <!-- typeof 是單元運算子,會先運算  -->
            <!-- 判斷有沒有email 這個變數 , 如果是首次來的話便沒有-->
            <% if(typeof email !== 'undefined') { %>
            <small id="emailHelp" class="form-text text-muted">上次輸入: <%= email %></small>
            <% } %>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password">
            <!-- locals => 模板自帶的物件 , 傳送過來的變數都會存在他的下面 -->
            <% if(locals.password !== undefined) { %>
            <small id="emailHelp" class="form-text text-muted">上次輸入: <%= password %></small>
            <% } %>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <div><%= JSON.stringify(locals) %></div>


</div>
<%- include('parts/footer') %>